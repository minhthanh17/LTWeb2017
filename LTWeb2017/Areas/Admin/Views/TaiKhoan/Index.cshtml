@model PagedList.IPagedList<DbSachOnline.EF.KhachHang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Danh sách tài khoản
            <a href="/admin/TaiKhoan/Create"><input type="button" value="Tạo tài khoản" class="btn btn-danger" /> </a>
        </div>

        <!-- /.panel-heading -->
        <div class="panel-body">
            @using (Html.BeginForm("Index", "TaiKhoan", FormMethod.Get))
            {
                <div class="row form-group">
                    <div class="col-lg-12">
                        <div class="col-lg-4">
                            <input type="text" value="@ViewBag.StringTim" name="timKiem" class="form-control" />
                        </div>
                        <div class="col-lg-4">
                            <button type="submit" class="btn-success">Tìm kiếm</button>
                        </div>
                    </div>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Họ tên</th>
                            <th>Tài khoản</th>
                            <th>Địa chỉ</th>
                            <th>Trạng thái</th>
                            <th>Thuộc tính</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                    <tbody>
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.TaiKhoan</td>
                            <td>@item.DiaChi</td>
                            <td>@item.status</td>
                            <td>
                                <a href="/admin/TaiKhoan/Edit/@item.MaKH">Sửa</a>
                                <a href="/admin/TaiKhoan/Delete/@item.MaKH">Xóa</a>
                            </td>

                        </tr>
                    </tbody>
                        }
                </table>
                @Html.PagedListPager(Model,page=>Url.Action("Index",new { page,@timKiem=ViewBag.StringTim}))
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>


